.carousel-item{ class: post.active ? 'active' : '' }
  %figure
    = image_tag post.image
  .carousel-caption.featured--callout.offset-4.col-3.text-sm-left.p-0
    - if post.is_new
      %span.badge.badge-new.t-2 New

    = link_to '#' do
      %h3= post.title
      %p= post.description
      %p
        %em= post.meta
